#include <iostream>
using namespace std;
int *stack;
int top = 0;
int SIZE;

void push(int value) 
{//stack=(int*)malloc(SIZE*sizeof(int));
    if (top == SIZE)
    {
        cout << "Stack Overflow!" << endl;
        return;
    }
    stack[top] = value;
    top++;
}

int pop(int value) {
    if (top == 0) {
        cout << "Stack Underflow" << endl;
        return -1;
    }
    return stack[top];
    top--;
}

void display() {
    if (top == 0) {
        cout << "Stack is empty" << endl;
        return;
    }
    for (int i = top - 1; i >= 0; i--)
        cout << stack[i] << endl;
}

int main() {
    cout<<"Enter stack size:"<<endl;
    cin>>SIZE;
    stack=(int*)malloc(SIZE*sizeof(int));
    int choice, value;
    while (true) {
        cout << "1-Push"<<endl;
        cout<<"2-Pop"<<endl;
        cout<<"3.Display"<<endl;
        cout<<"4.Exit"<<endl;
        cin >> choice;

        if (choice == 1) 
        {
        cout << "Enter value to push: ";
            cin >> value;
            push(value);
        } 
        if (choice == 2)
        {
          cout << "Popped: "<< endl;
          pop(value);
        } 
        if (choice == 3) {
            display();
        } 
        if (choice == 4) {
            break;
        } 
        }
    }
